{
  "name": "hua-i18n-sdk",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.0",
  "description": "A lightweight and powerful internationalization SDK for React applications, inspired by hua-api's translation system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "README.en.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "react",
    "typescript",
    "multilingual",
    "localization",
    "ssr",
    "hooks"
  ],
  "author": "HUA Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.0.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/i18n-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/HUA-Labs/i18n-sdk/issues"
  },
  "homepage": "https://github.com/HUA-Labs/i18n-sdk#readme"
}
